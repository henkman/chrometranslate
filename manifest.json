{
	"manifest_version" : 2,
	"name" : "chrometranslate",
	"description" : "Translate selected text immediatly",
	"icons" : {
		"128" : "icon.png"
	},
	"version" : "1.3",
	"options_ui" : {
		"page" : "options.html",
		"chrome_style" : true
	},
	"browser_action" : {
		"default_icon" : "button_inactive.png"
	},
	"permissions" : [
		"storage",
		"http://translate.google.com/*"
	],
	"background" : {
		"scripts" : ["background.min.js"],
		"persistent" : false
	},
	"content_scripts" : [
		{
			"matches" : ["*://*/*"],
			"run_at" : "document_end",
			"js" : ["content.min.js"]
		}
	]
}
